<div class="container">
  <h1><%= @restaurant.name %></h1>
      <br>
      <h5>Address: <%= @restaurant.address %></h5>
      <br>
      <h5>Tel: <%= @restaurant.phone_number %></h5>
      <hr>
      <p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>
      <br>
      <%= link_to "Go back to List", restaurants_path, class: "btn btn-primary"%>
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
</div>
